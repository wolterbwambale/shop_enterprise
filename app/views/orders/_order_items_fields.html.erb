<%= form.fields_for :order_items do |item_form| %>
  <% if item_form.object.product_detail.present? %>
    <div class="order-item" data-product-id="<%= item_form.object.product_detail_id %>">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
          <%= item_form.hidden_field :product_detail_id %>
          <p><%= item_form.object.product_detail.name %></p>
        </div>
        <div class="d-flex align-items-center">
          <%= item_form.number_field :quantity, class: 'form-control me-2', min: 1 %>
          <button type="button" class="btn btn-danger btn-sm remove-item-btn">X</button>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
